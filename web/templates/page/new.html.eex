<div class='page-header'>
  <h1>Create a page</h1>
</div>
<form role='form' action='<%= page_path(:create) %>' method='post'>
  <div class="form-group">
    <label for="page[name]">Name</label>
    <input type="text" name="page[name]" class="form-control" placeholder="Enter name">
  </div>
  <button type="submit" class="btn btn-default btn-primary">Create</button>
</form>
